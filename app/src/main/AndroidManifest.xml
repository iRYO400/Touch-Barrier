<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="wei.mark.standouttest">

    <uses-permission android:name="android.permission.ACTION_MANAGE_OVERLAY_PERMISSION" />
    <!-- The SYSTEM_ALERT_WINDOW permission is for Android versions 5.xx and lower only -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:name=".BarrierApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppThemeNoBar"
        tools:ignore="GoogleAppIndexingWarning">

        <!-- Activities -->
        <activity
            android:name=".MainActivity"
            android:excludeFromRecents="true"
            android:theme="@style/Theme.AppCompat.Translucent" />

        <activity
            android:name=".ui.settings.SettingsActivity"
            android:label="@string/title_activity_settings">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.lock_screen.ScreenLockActivity" />

        <!-- Services -->
        <service android:name=".MostBasicWindow" />
        <service android:name=".SimpleWindow" />
        <service android:name=".MultiWindow" />
        <service android:name=".WidgetsWindow" />
        <service android:name=".floatingfolders.FloatingFolder" />
        <service android:name=".FullScreenWindow" />
        <service
            android:name=".quick_tile.QuickTilesService"
            android:enabled="@bool/isQuickSettingEnabled"
            android:exported="true"
            android:icon="@drawable/ic_layers_unavailable_24dp"
            android:label="@string/app_name"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>

        <service
            android:name=".accessibility.BarrierAccessibilityService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/barrier_accessibility_service" />
        </service>
    </application>

</manifest>